	editor = nano

[pull]
	rebase = true

[http]
	postBuffer = 300000000
	sslVerify = true

[pack]
	windowMemory = 800m
	SizeLimit = 800m
	threads = 1
	window = 0

[status]
	showuntrackedfiles = all

[push]
	default = tracking

[rebase]
	stat = true

[color]
	ui = auto

[diff]
	tool = meld

[difftool "meld"]
	 cmd = meld "$(wslpath -aw $LOCAL)" "$(wslpath -aw $REMOTE)"

[difftool]
	prompt = true

[mergetool "meld"]
	cmd = meld --auto-merge \"$(wslpath -aw $LOCAL)\" \"$(wslpath -aw $BASE)\" \"$(wslpath -aw $REMOTE)\" --output \"    $(wslpath -aw $MERGED)\" --label=Local --label=Base --label=Remote --diff \"$(wslpath -aw $BASE)\" \"$(wslpath -aw $    LOCAL)\" --diff \"$(wslpath -aw $BASE)\" \"$(wslpath -aw $REMOTE)\"

[init]
	defaultBranch = main

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[rerere]
	enabled = true

[column]
	ui = auto

[credential]
	helper = cache --timeout 7200
	helper = oauth -verbose

[submodule]
	recurse = true

